@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Detail Page";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">상세 읽기 - @Model.BoardTitle</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label>제목</label> @Model.BoardTitle
            </div>
            <div class="panel-body">
                <label>내용</label>
                @Html.Raw(Model.BoardContent)
            </div>
        </div>
        <div class="panel-footer text-right">
            @if (Context.Session.GetInt32("USER_LOGIN_KEY") == @Model.UserNo)
            {
                <a class="btn btn-warning" asp-controller="Board" asp-action="Edit" asp-route-boardNo="@Model.BoardNo">게시물 수정하기</a>
                <a class="btn btn-danger" asp-controller="Board" asp-action="Delete" asp-route-boardNo="@Model.BoardNo">게시물 삭제하기</a>
                <a class="btn btn-primary" asp-controller="Board" asp-action="Index">목록으로 돌아가기</a>
            }
            else
            {
                <a class="btn btn-primary" asp-controller="Board" asp-action="Index">목록으로 돌아가기</a>
            }
        </div>
    </div>
</div>

<script>
    let deleteBtn = document.querySelector(".btn-danger");
    deleteBtn.onclick = function () {
        if (confirm("진짜로 게시물 삭제할거임?!"))
        {

        }
    };
</script>