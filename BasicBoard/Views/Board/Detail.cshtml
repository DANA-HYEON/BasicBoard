

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">상세 읽기 - @Model.BoardTitle</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label>제목</label> @Model.BoardTitle
            </div>
            <div class="panel-body">
                <label>내용</label>
                @Html.Raw(Model.BoardContent)
            </div>
        </div>
        <div class="panel-footer text-right">
            <a class="btn btn-primary" asp-controller="Board" asp-action="Index">목록으로 돌아가기</a>
        </div>
    </div>
</div>